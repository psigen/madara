<group>
    <setup>
        <parallel />
        <realtime />
        <timing />
    </setup>
    <group file="TwoSleeps.xml" />
    <sleep>
        <realtime />
        <timing />
        <barrier name="sleep" />
        <id>2</id>
        <processes>4</processes>
        <delay>5</delay>
        <stderr>$(RESULTS)/sleep3.err</stderr>
        <stdout>$(RESULTS)/sleep3.out</stdout>
    </sleep>
    <sleep>
        <realtime />
        <timing />
        <barrier name="sleep" />
        <id>3</id>
        <processes>4</processes>
        <delay>5</delay>
        <stderr>$(RESULTS)/sleep4.err</stderr>
        <stdout>$(RESULTS)/sleep4.out</stdout>
    </sleep>
</group>
