project (Splice_DDS_Transport_IDL) : using_splice, using_splice_idl, build_files {

  requires += opensplice

  custom_only = 1
  
  splice_ts_flags += -d include/madara/transport/splice
  
  Build_Files {
    $(MADARA_ROOT)/default.features
    Splice_DDS_Transport.mpc
    using_splice.mpb
    using_splice_idl.mpb
  }

  SpliceTypeSupport_Files {
    include/madara/transport/splice/Splice_Knowledge_Update.idl
  }

}
