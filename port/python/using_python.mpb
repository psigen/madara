feature (python) {

  includes += $(BOOST_ROOT)
  includes += $(PYTHON_ROOT)/include

  lit_libs += libboost_python3-vc100-mt-$(BOOST_VERSION)

  lit_libs += python$(PYTHON_VERSION)
  
  libpaths += $(BOOST_ROOT)/stage/lib
  libpaths += $(PYTHON_ROOT)/libs

  macros += _MADARA_PYTHON_CALLBACKS_
}
